@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.OrderStatus>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
}

@Html.Partial("~/Views/Partials/SectionHeader.cshtml")

<section class="section">

    <div class="container">

        <div class="col-md-3">
            <nav class="nav-bar nav-bar--list">
                @Html.Partial("~/Views/Partials/Navigation/SubNavigation.cshtml")                                
                
                @*@(Umbraco.AssignedContentItem.OfType<OrderStatus>().OrderId)*@
            </nav>
        </div>

        <div class="col-md-9">
            <article>
                
                <h1>Order status for order @Model.OrderId</h1>

                @Html.GetGridHtml(Model, "bodyText", "bootstrap3-fluid")
            </article>
        </div>
    </div>

</section>